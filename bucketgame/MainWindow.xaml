<Window x:Class="BucketGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="clr-namespace:Microsoft.Kinect;assembly=Microsoft.Kinect"
        xmlns:t="clr-namespace:Microsoft.Kinect.Toolkit;assembly=Microsoft.Kinect.Toolkit"
        xmlns:c="clr-namespace:Microsoft.Kinect.Toolkit.Controls;assembly=Microsoft.Kinect.Toolkit.Controls"
        xmlns:controls="clr-namespace:BucketGame"
        Title="MainWindow" Width="640" Height="480" Closed="Window_Closed" >
    <Grid>
        <Canvas Width="640" Height="480" x:Name="targetsCanvas">
            
            <!--<controls:Bucket Height="100" Width="100" Canvas.Left="100" Canvas.Top="100" x:Name="Portal"></controls:Bucket>-->
           <Image x:Name="frame" HorizontalAlignment="Left"  Margin="0,0,-8,-30" VerticalAlignment="Top" Width="640" Height="480"/>
            <Button Content="Start" Height="42" Canvas.Left="10" Canvas.Top="10" Width="122" Click="Button_Click" x:Name="GameButton"/>
            <Label Content="" x:Name="StatusLabel" FontSize="30" Margin="10,162,10,244" HorizontalAlignment="Center" VerticalAlignment="Center" Height="44" Width="612" Foreground="Red"/>
        </Canvas>
    </Grid>

</Window>
